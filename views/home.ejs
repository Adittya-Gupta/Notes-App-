<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Notes App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd;">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Notes App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="active nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About Us</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/add">Add a note</a>
              </li>
              
          </div>
        </div>
      </nav>

    <div class="cards container row mx-4">
        <h1 class="my-4"> All Notes </h1>
        <% notes.forEach((note)=>{ %>


        <div class="card mx-2 my-2" style="width: 18rem;" data-id=<%=note._id%>>
            <div class="card-body" data-id=<%=note._id%>>
              <h5 class="card-title" data-id=<%=note._id%>><%=note.title%></h5>
              <h6 class="card-subtitle mb-2 text-muted" data-id=<%=note._id%>><%=note.date%></h6>
              <p class="card-text" data-id=<%=note._id%>><%=note.desc%></p>
            </div>
          </div>
        <% }) %>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script>
        
      const response = fetch('/',{
          method: 'POST',
          headers: {
              'Content-Type': 'application/json'
          },
      })
        let cards = document.querySelectorAll('.card')
        cards.forEach(card => {
            card.addEventListener('mouseover', ()=>{
                card.classList.add('border-success')
                card.classList.add('text-success')
            })
            card.addEventListener('mouseleave', ()=>{
                card.classList.remove('border-success')
                card.classList.remove('text-success')
            })
            card.addEventListener('click', (e)=>{
                window.location.href = `/notes/${e.target.dataset.id}`
            })
        });
        let cardholder = document.querySelector('.cards')
        console.log(response)

        
    </script>
  </body>
</html>